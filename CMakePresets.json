{
  "version": 3,
  "configurePresets": [
    {
      "name": "windows-base",
      "hidden": true,
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/${presetName}",
      "cacheVariables": {
        "CMAKE_CXX_COMPILER": "cl.exe"
      },
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      }
    },
    {
      "name": "snellius-base",
      "displayName": "GCC",
      "generator": "Unix Makefiles",
      "binaryDir": "${sourceDir}/build/${presetName}",
      "cacheVariables": {
        "dynaplex_enable_pytorch": true,
        "dynaplex_enable_gurobi": false,
        //"CMAKE_PREFIX_PATH": "~/anaconda3/envs/py37_torch/lib/python3.7/site-packages/torch/share/cmake/Torch;~/anaconda3/envs/py37_torch/lib/python3.7/site-packages/pybind11/share/cmake;~/anaconda3/envs/py37_torch/bin/python",
        "CMAKE_PREFIX_PATH": "/home/willemvj/libtorch/share/cmake",
        "CMAKE_BUILD_TYPE": "Release"
      },
      "condition": {
        "type": "notEquals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      }
    },
      {
        "name": "x64-debug",
        "hidden": true,
        "inherits": "windows-base",
        "architecture": {
          "value": "x64",
          "strategy": "external"
        },
        "cacheVariables": {
          "CMAKE_BUILD_TYPE": "Debug"
        }
      },
      {
        "name": "x64-release",
        "hidden": true,
        "inherits": "x64-debug",
        "cacheVariables": {
          "CMAKE_BUILD_TYPE": "Release"
        }
      }
    ]
}
